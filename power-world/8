/- follow hint, remove 0 powers -/
rw two_eq_succ_one,
rw one_eq_succ_zero,
repeat {rw pow_succ},

/- get rid of succ(succ 0)) related factor-/
rw succ_eq_add_one,
rw succ_add,
rw zero_add,
rw succ_mul,

/- clear out 1*, ^0s -/
repeat {rw pow_zero},
repeat {rw one_mul},
rw add_mul a a b,

/- factor a and b's out -/
repeat {rw add_mul},
repeat {rw mul_add},

/- i had to factor because simp wasn't smart enough but now it can figure things out -/
simp,
